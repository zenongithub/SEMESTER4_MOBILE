<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_gravity="center"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_below="@+id/image_produk_keranjang"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/id_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Transaksi :"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tanggal_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tanggal transaksi :"
                    android:textStyle="italic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/Jumlah_Produktransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah produk :"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/Total_Hargatransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Total Harga :"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/status_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:text="Status :           "
                    android:textSize="15sp"
                    android:textStyle="italic" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>