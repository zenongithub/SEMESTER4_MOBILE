<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pesanan.DetailPesanan"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_detailpesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID PESANAN"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/totalharga_detailpesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL HARGA"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/btn_pembayaran"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_click_button"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Upload Pembayaran"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/view_pembayaran"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>