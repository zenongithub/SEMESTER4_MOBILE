<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfielFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Profile"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        app:cardCornerRadius="100dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:rotation="270"
            android:src="@drawable/zenong">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zenong"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="170dp"/>




    <EditText
        android:id="@+id/IdProfil"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingLeft="10dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:hint="Id"
        android:inputType="textIdProfil"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/Nama"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="290dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingLeft="10dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:hint="Nama"
        android:inputType="textNama"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/Email"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingLeft="10dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/baseline_mail_outline_24"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/NewPassword"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="430dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingLeft="10dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/baseline_lock_open_24"
        android:hint="New Password"
        android:inputType="textNewPassword"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="500dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingLeft="10dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/padlock"
        android:hint="Conform Password"
        android:inputType="textConfirmPassword"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginTop="640dp"
        android:text="Simpan"
        android:textAlignment="center"
        android:layout_marginLeft="28dp"
        android:background="@drawable/custom_click_button"
        android:textColor="@color/white"
        />
</FrameLayout>