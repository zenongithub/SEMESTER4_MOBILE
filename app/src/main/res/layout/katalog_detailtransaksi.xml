<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="408dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_produk_detailtransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/p1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/image_produk_detailtransaksi"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/nama_produk_detailtransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Baju Gucci"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/harga_produk_detailtransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Rp.5.000.000" />

                <TextView
                    android:id="@+id/ukuran_produk_detailtransaksi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="XL"
                    android:visibility="invisible"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/kategori_produk_detailtransaksi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Baju"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/id_produk_detailtransaksi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/deskripsi_produk_detailtransaksi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>