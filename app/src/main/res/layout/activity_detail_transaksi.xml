<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaksiactivity.DetailTransaksi"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#EA734D">

        <TextView
            android:id="@+id/id_detailtransaksi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TR0001"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Total Belanja"
        android:layout_gravity="center"
        android:paddingTop="40dp"/>
    <TextView
        android:id="@+id/total_harga_detailtransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="25000"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="Rupiah"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/tgl_detailtransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="25-05-2023"
        android:layout_gravity="center"
        android:paddingTop="10dp"/>
    <TextView
        android:id="@+id/status_detailtransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Selesai"
        android:layout_gravity="center"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="List Belanja"
        android:layout_gravity="start"
        android:textStyle="italic"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_detailtransaksi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/katalog_detailtransaksi"/>
    </RelativeLayout>

</LinearLayout>